{
  "name": "Ad Free",
  "description" : "A Chrome extension for ban advertising",
  "version": "1.3.2",
  "manifest_version": 3,
  "author": "chrischen0405",
  "action": {
    "default_icon": {
      "16": "static/img/logo-16.png",
      "32": "static/img/logo-32.png",
      "48": "static/img/logo-48.png",
      "128": "static/img/logo-128.png"
    },
    "icons": {
      "16": "static/img/logo-16.png",
      "32": "static/img/logo-32.png",
      "48": "static/img/logo-48.png",
      "128": "static/img/logo-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.bilibili.com/*",
        "https://www.bilibili.com/*"
      ],
      "css": ["css/bilibili.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://www.csdn.net/*",
        "https://www.csdn.net/*",
        "http://blog.csdn.net/*",
        "https://blog.csdn.net/*"
      ],
      "css": ["css/csdn.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://www.douyu.com/*",
        "https://www.douyu.com/*"
      ],
      "css": ["css/douyu.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "http://www.jianshu.com/*",
        "https://www.jianshu.com/*"
      ],
      "css": ["css/jianshu.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [],
  "homepage_url": "https://github.com/chrischen0405/ad-free"
}
